//map definitions
let level = 0
const levels = [
  map`
..........
....1.1.1.
....2.2.2.
....1.1.1.
qwertyuiop
asdfghjkl.
.zxcvbnm..
DDDDDDDDDD
qwertyuiop
asdfghjkl.
Czxcvbnm..`, //qwerty keboard
]

setMap(levels[level])
if(level == 0) {
  //placeholder, replace with alphebatized scrambler rotations
  addSprite(4, 1, b)
  addSprite(4, 2, a)
  addSprite(4, 3, z)
