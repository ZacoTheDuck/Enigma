  addSprite(2, 8, button)
  addSprite(3, 8, button)
  addSprite(4, 8, button)
  addSprite(5, 8, button)
  addSprite(6, 8, button)
  addSprite(7, 8, button)
  addSprite(8, 8, button)
  addSprite(9, 8, button)
