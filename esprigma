  addSprite(2, 10, button)
  addSprite(3, 10, button)
  addSprite(4, 10, button)
  addSprite(5, 10, button)
  addSprite(6, 10, button)
  addSprite(7, 10, button)
}


//WASD
onInput("w", () => {
  getFirst(cursor).y -= 1
})
onInput("a", () => {
  getFirst(cursor).x -= 1
})
onInput("s", () => {
  getFirst(cursor).y += 1
})
onInput("d", () => {
  getFirst(cursor).x += 1
})

afterInput(() => {
  
})
